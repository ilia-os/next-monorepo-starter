# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default for every file
# Unix-style newlines with a newline ending
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2
charset = utf-8

# https://youtrack.jetbrains.com/issue/WEB-45470
[*.ejs]
indent_style = space
indent_size = 4
